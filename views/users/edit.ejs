<% include ../partials/header %>

  <section class="register-page">

    <div class="register-form">
      <h1>Edit your profile:</h1>
      <form action="/users/<%=user._id%>?_method=put" method="post">

        <div class="form-group">
          <label for="email">E-mail:</label>
          <input class="form-control" id="email" type="email" name="email" placeholder="<%=user.email%>" required>
        </div>

        <div class="form-group">
          <label for="firstName">First Name:</label>
          <input class="form-control" id="firstName" type="text" name="firstName" placeholder="<%=user.firstName%>" required>
        </div>

        <div class="form-group">
          <label for="lastName">Last Name:</label>
          <input class="form-control" id="lastName" type="text" name="lastName" placeholder="<%=user.lastName%>" required>
        </div>




        <div class="form-group">
          <label for="password">Password:</label>
          <input class="form-control" id="password" type="password" name="password" placeholder="min. 8 characters" pattern=".{8,}" required title="8 characters minimum">
        </div>

        <div class="form-group">
          <label for="confirm-password">Confirm Password:</label>
          <input class="form-control" id="confirm_password" type="password" name="confirm_password" placeholder="min. 8 characters" required>
        </div>

        <div class="form-group">
          <label for="image">Profile picture url</label>
          <input class="form-control" id="image" type="text" placeholder="<%=user.profilePic%>" name="profilePic">
        </div>

        <div class="form-group">
          <button class="btn btn-green">Sign Up</button>
        </div>


        <!-- <input type="text" name="adminCode" placeholder="adminCode"> -->

      </form>
    </div>

  </section>
  <% include ../partials/footer %>
