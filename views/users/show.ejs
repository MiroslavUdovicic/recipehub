<% include ../partials/header2 %>

  <section class="user-profile">

    <div class="user-wrapper">

      <div class="user-info">

        <div class="userpic" style="background-image: url('<%= user.profilePic %>')"></div>


        <div class="user-name">
          <h2><%= user.firstName %>
              <%= user.lastName %> </h2>
          <!-- <% if (currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
            <a href="/users/<%=user._id%>/edit" title="Edit profile"><i class="fas fa-pencil-alt fa-sm"></i></a>
            <%}%> -->
        </div>

        <div class="user-about">
          <table>
            <tr>
              <td>E-mail: </td>
              <td>
                <a href="mailto:<%= user.email %>">
                  <%= user.email %>
                </a>
              </td>
            </tr>
            <tr>
              <td>Registered: </td>
              <td>
                <%= moment(user.registeredAt).format("MMMM Do YYYY") %>
              </td>
            </tr>
          </table>
        </div>
      </div>

      <div class="user-posts">
        <% if (recipes.length>=1) { %>
          <h3 style="text-align: center"><%= user.firstName %>'s Recipes:</h3>
          <%}%>

            <% if (recipes.length<1) { %>
              <h3 style="text-align: center"><%= user.firstName %> has no recipes yet.</h3>
              <%}%>

                <% recipes.forEach(function(recipe) { %>
                  <div class="post-body">

                    <div class="post-left">
                      <div class="post-img" style="background-image: url('<%=recipe.image%>')"></div>
                      <a href="/recipes/<%=recipe.id%>">
                        <%=recipe.name%>
                      </a>
                    </div>
                    <div class="post-right">
                      <p><%-recipe.description.substring(0, 150)%>...</p>
                      <p style="margin-top: 10px"><%= moment(recipe.createdAt).format("MMMM Do YYYY, h:mm:ss a") %></p>
                    </div>

                  </div>
                  <%})%>

      </div>
    </div>

  </section>

  <% include ../partials/footer %>
