<% include ../partials/header2 %>

  <section class="new-recipe">
    <div class="new-recipe-form">
      <h1>Edit <%=recipe.name%></h1>

      <form action="/recipes/<%=recipe._id%>?_method=put" method="post">
        <div class="form-group">
          <label for="recipe-name">Recipe name:</label>
          <input id="recipe-name" class="form-control" type="text" name="recipe[name]" value="<%=recipe.name%>" required>
        </div>
        <div class="form-group">
          <select class="" name="category">
            <option value="snacks" name:"snacks">Snacks</option>
            <option value="soups" name:"soups">Soups</option>
          </select>
        </div>
        <div class="form-group">
          <label for="recipe-img">Image url:</label>
          <input id="recipe-img" class="form-control" type="text" name="recipe[image]" value="<%=recipe.image%>" required>
        </div>
        <div class="form-group">
          <label for="description">Short description:</label>
          <textarea id="description" class="form-control" name="recipe[description]" rows="8" cols="80" required>
             <%=recipe.description%>
          </textarea>
        </div>

          <div class="form-group">
            <label for="instructions">Instructions:</label>
            <textarea id="instructions" class="form-control" name="instructions" rows="8" cols="80" required>
              <%=recipe.instructions%>
            </textarea>
          </div>


        <button type="submit" class="btn btn-green">Update</button>
      </form>
    </div>
  </section>

  <script>
      CKEDITOR.replace( 'description' );
      CKEDITOR.replace( 'instructions' );
    </script>


  <% include ../partials/footer %>
